<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Originator.Splash" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowSplashScreenBackground">@color/splash_bg</item>
        <!-- Remove animated icon to prevent circular masking - use windowBackground instead -->
        <item name="android:windowSplashScreenAnimatedIcon">@null</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="android:windowSplashScreenBrandingImage">@null</item>
        <!-- Use windowBackground for pre-Android 12 compatibility and proper logo display -->
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>

