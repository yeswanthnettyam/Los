<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for development -->
    <!-- IMPORTANT: Remove or restrict this in production builds -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Android Emulator localhost -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        
        <!-- Physical device - add your local IP here -->
        <!-- Example: <domain includeSubdomains="true">192.168.1.100</domain> -->
        
        <!-- Localhost variations -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
    
    <!-- Production: Use HTTPS only -->
    <!-- All other domains default to secure (HTTPS only) -->
</network-security-config>
